<style>
  .split-pair.reverse {
    flex-direction: row-reverse;
  }
  .measure-short {
    padding: 1em;
  }
  .image-container {
    padding: 0;
  }
  .large-text {
    font-size: 1.5em;
  }
  .flex {
    display: flex;
    flex-wrap: wrap;
    counter-reset: flexnumbers;
  }
  .flex .flex-item:before {
    counter-increment: flexnumbers;
    content: '0' counter(flexnumbers);
    font-size: var(--text-700);
  }
  .flex.cols-3 .flex-item {
      width: 33%;
  }
  .flex.cols-2 .flex-item {
      width: 50%;
  }
  .flex-item__title {
      font-size: var(--text-400);
      margin-bottom: 0.5rem;
  }
  .flex-item__icon {
      margin-bottom: 1rem;
  }
  .flex-item p {
      font-size: var(--text-300);
  }
  .info-list {
    margin-top: 0;
    padding: 0;
    list-style: none;
    margin-bottom: 0.5em !important;
  }
  .info-list li {
    padding: 0.5em 0;
    background: var(--color-dark);
    padding-left: 3em;
    color: var(--color-cream-light);
    margin-bottom: 1px;
    position: relative;
  }
  .info-list li:before {
    content: "âž¤";
    position: absolute;
    left: 1em;
  }
  .info-list li h4 {
    color: var(--color-cream);
    margin: 0;
    font-size: 1.2em;
  }
  .info-list li p {
    margin: 0;
  }
  .action-link a {
    text-decoration: none;
    color: var(--color-dark);
    transition: 0.3s ease-in-out;
  }
  .action-link a:hover {
    filter: opacity(0.6);
  }
  .our-team {
    background: var(--color-dark);
    color: var(--color-cream);
  }
  .our-team h3 {
    color: var(--color-cream);
    padding: 1.5em;
    margin: 0;
  }
  section.site-visit .image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    max-height: 25em;
    overflow: hidden;
  }
  section.our-team .image-background,
  section.services .image-background {
    height: 45em;
    background-size: cover;
    background-position: center;
  }
  section.services .image-background {
    width: 50%;
    height: 20em;
  }
  section.our-customers .image-container img {
    background: #003d57;
  }

  @media only screen and (max-width: 900px) {
    section.services .image-background {
      width: 100%;
    }
  }
</style>

